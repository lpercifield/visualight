div.navbar
	div.container
		div.nav-collapse
			ul#global-nav.nav.pull-left
				a(href='/home').brand My Account
		button#btn-logout.btn.btn-primary.pull-right
			i.icon-lock.icon-white
			| Sign Out
		div
			//adding button dropdowns
			div#bulb-btns.btn-group.btn
				button#btn-add.btn.btn-inverse +
				button.btn.btn-inverse.dropdown-toggle(data-toggle='dropdown') &nbsp; LIGHTS &nbsp; &nbsp;
					span.caret
				ul.dropdown-menu#bulbs(role="menu")
			
			div#group-btns.btn-group.btn
				button#btn-group-add.btn.btn-inverse +
				button.btn.btn-inverse.dropdown-toggle(data-toggle='dropdown') &nbsp; GROUPS &nbsp; &nbsp; 
					span.caret
				ul.dropdown-menu#groups
			

#account-form-container.white
	h1.intro Select A Bulb or Group

	div.current(style="display:none")
		h1(style="display:inline; vertical-align: middle;")
		button(type="button", style="display:inline; vertical-align: middle;").btn.btn-mini#settings SETTINGS
		button(type="button", style="display:inline; vertical-align: middle;").btn.btn-mini.btn-danger#delete DELETE	


	h1#nobulbs(style="display:none")
		| No Visualights Found
		br
		| Click "Add Visualight" above
	
	div#main(style='display:block')
		div#options(style="display:none")
			form(method="post", action="bulb//").update
				div.input-append
					input(type="text", name="name").name.input-xlarge
					input(type="hidden", name="key").id
					button(type="button").btn#update Update

			h3 Bulb Status:
			span#status
			form#form-inline
				input(id="open", type="button", value="Connect")
				input(id="close", type="button", value="Disconnect")
				
		form
			.form-item
				//input#color(type="text", value="", style="width:300px", name="color")
				#picker
		div#alerts
			button(type="button")#sendAlert.btn.btn-danger Send Alert
			label Duration
			div#duration
			label Frequency
			div#frequency
			label Type
			div#type
			div.container
				div#slider
			
		

